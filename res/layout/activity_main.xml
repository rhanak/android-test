<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        tools:context=".MainActivity" />
        
    <TextView
        android:id="@+id/SENSOR_total"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/SENSOR_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
    <View 
   		android:layout_width="fill_parent"
   		android:layout_height="1dp"       
   		android:background="#000000"/>
    
    <TextView
        android:id="@+id/LINEARACCELERATION_reading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/MAXLINEARACCELERATION_reading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
    <View 
   		android:layout_width="fill_parent"
   		android:layout_height="1dp"       
   		android:background="#000000"/>
    
    <TextView
        android:id="@+id/ACCELERATION_reading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/MAXACCELERATION_reading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/CONVERSIONLINEAR_reading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
        
        
</LinearLayout>